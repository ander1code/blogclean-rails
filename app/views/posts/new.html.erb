<div class="container">
   <div class="row">
      <div class="col-1"></div>
      <div class="col-md-10">
         <%= form_for @post, url: posts_path, html: { multipart: true } do |f| %>
            <div class="form-group">
               <h1>Create</h1>
            </div>

            <div class="form-group">
               <% if @post.errors.any? %>
                  <div class="list_error_form">
                     <ul>
                        <% @post.errors.full_messages.each do |message| %>
                           <li><%= message %></li>
                        <% end %>
                     </ul>
                  </div>
               <% end %>
            </div>

            <div class="form-group">
               <%= f.hidden_field :user_id, :value => current_user.id, :class => 'form-control' %>
            </div>
            <div class="form-group">
               <%= f.label :title %>
               <%= f.text_field :title, :class => 'form-control border-solid', :maxlenght => 100 %>
            </div>
            <div class="form-group">
               <%= f.label :briefing %>
               <%= f.text_field :briefing, :class => 'form-control border-solid', :maxlenght => 200 %>
            </div>
            <div class="form-group">
               <%= f.label :text %>
               <%= f.text_area :text, :class => 'form-control border-solid', :rows => 15, :maxlenght => 3000 %>
            </div>
            <div class="form-group">
               <label for="">Image</label>
               <%= f.file_field :avatar, :class => 'form-control border-solid cursor-pointer' %>
            </div>
            <div class="form-group">
               <%= f.submit 'Create', :value => 'Create', :class => "btn btn-success col-md-2 cursor-pointer float-right margin-bottom_button" %>
               <%= link_to 'Clean', new_post_path, :class => "btn btn-secondary col-md-2 cursor-pointer float-right margin-bottom_button" %>
               <%= link_to 'Cancel', root_path, :class=> 'btn btn-info col-md-2 cursor-pointer float-right margin-bottom_button' %>
            </div>
         <% end %>
      </div>
      <div class="col-1"></div>
   </div>
</div>
<%= stylesheet_link_tag '/assets/posts/new', media: 'all', 'data-turbolinks-track' => true %>